{
  "name": "upload-analyzer",
  "version": "0.1.4",
  "description": "PE/MSI/DMG file analyzer compiled to WebAssembly with TypeScript support",
  "main": "pkg/upload_analyzer.js",
  "types": "src/ts/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/ts/types/index.d.ts",
      "import": "./pkg/upload_analyzer.js",
      "require": "./pkg/upload_analyzer.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.js",
      "require": "./dist/helpers.js"
    },
    "./types": "./src/ts/types/index.d.ts"
  },
  "files": [
    "pkg/**/*",
    "src/ts/types/**/*",
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:types",
    "build:wasm": "node scripts/wasm-build.js bundler",
    "build:types": "tsc && mkdir -p dist/types && cp src/ts/types/index.d.ts dist/types/index.d.ts",
    "build:web": "node scripts/wasm-build.js web",
    "bundle": "npm run build:web && cp pkg/upload_analyzer_bg.wasm public/ && node scripts/bundle-single.js",
    "dev": "npm run build:web && http-server . -p 8888 -c-1 -o /dev/",
    "serve": "http-server public -p 8888 -c-1",
    "lint": "npm run lint:rust && npm run lint:ts",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:rust:fix": "cargo clippy --all-targets --all-features --fix --allow-dirty --allow-staged",
    "lint:ts": "eslint src/ts",
    "lint:ts:fix": "eslint src/ts --fix",
    "prepublishOnly": "npm run build",
    "audit": "npm audit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mitriyweb/upload-analyzer"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "pe",
    "msi",
    "dmg",
    "analyzer",
    "rust",
    "binary-analysis",
    "typescript",
    "types",
    "windows-installer",
    "apple-disk-image",
    "executable"
  ],
  "author": "Mitriyweb <mitriyweb@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.27.0",
    "@types/node": "22.14.0",
    "eslint": "9.27.0",
    "typescript-eslint": "8.32.1",
    "esbuild": "0.25.12",
    "http-server": "14.1.0",
    "terser": "5.31.1",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=25.1.0"
  }
}